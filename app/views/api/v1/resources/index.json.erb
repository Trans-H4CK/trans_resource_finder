{
  "resources": [
    <% @resources.each do |resource| %>
      <%= render 'resource', :resource => resource %> <%= ", " unless resource == @resources.last %>
    <% end %>
  ],
  "page": <%= @resources.current_page %>,
  "per_page": <%= @resources.per_page %>,
  "total_entries": <%= @resources.total_entries %>
}